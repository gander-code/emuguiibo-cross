<UserControl 
  xmlns="https://github.com/avaloniaui" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:ge="clr-namespace:GridExtra.Avalonia;assembly=GridExtra.Avalonia"
  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" 
  x:Class="emuGUIibo_Cross.Views.AmiiboView">
  <StackPanel DataContext="{Binding AmiiboVM}" Orientation="Vertical">
    <StackPanel Orientation="Horizontal" Height="450" Width="500">
      <ListBox SelectionMode="Single" Items="{Binding Series}" x:Name="seriesListBox" Width="230" Margin="10" />
      
      <ListBox SelectionMode="Single" Items="{Binding Amiibos}" x:Name="amiiboListBox" Width="230" Margin="10" />
    </StackPanel>
  </StackPanel>
</UserControl>